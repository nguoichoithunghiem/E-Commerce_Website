@model AppUserModel
@{
    ViewData["title"] = "Chỉnh Sửa Người Dùng";
}

<h3>Chỉnh Sửa Người Dùng</h3>

<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Tên Người Dùng</label>
            <input asp-for="UserName" required class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" required class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Số Điện Thoại</label>
            <input asp-for="PhoneNumber" required class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <!-- Địa chỉ giao hàng 1 -->
        <div class="form-group">
            <label>Địa chỉ giao hàng 1</label>
            <input asp-for="ShippingAddress1" class="form-control" />
            <span asp-validation-for="ShippingAddress1" class="text-danger"></span>
        </div>

        <!-- Địa chỉ giao hàng 2 -->
        <div class="form-group">
            <label>Địa chỉ giao hàng 2</label>
            <input asp-for="ShippingAddress2" class="form-control" />
            <span asp-validation-for="ShippingAddress2" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Mã Mật Khẩu Hiện Tại</label>
            <input asp-for="PasswordHash" readonly required class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Vai trò</label>
            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Cập Nhật</button>
        </div>

    </form>
    <a asp-action="Index">Quay lại danh sách Người Dùng</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
